<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_background</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="LoginActivityTheme" parent="AppTheme">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TextInputViewAppearance">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="DefaultInputView">
        <item name="input_view_text_color">@color/input_view_text_color</item>
        <item name="input_view_title_color">@color/input_view_title_color</item>
        <item name="border_color">@color/border_color</item>
        <item name="hint_color">@color/gray_BDBDBD</item>
    </style>

    <declare-styleable name="DropdownInputView">
        <attr name="dropdown_input_title" format="reference|string" />
    </declare-styleable>

    <style name="MaterialButton">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemTextAppearanceInactive">@style/navTextInactive</item>
        <item name="itemTextAppearanceActive">@style/navTextActive</item>
        <item name="itemTextColor">@color/navigation_color</item>
        <item name="itemIconTint">@color/navigation_color</item>
    </style>

    <style name="navTextInactive">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray_BDBDBD</item>
        <item name="fontFamily">@font/semi_bold</item>
    </style>

    <style name="navTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="fontFamily">@font/semi_bold</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton" />

</resources>
